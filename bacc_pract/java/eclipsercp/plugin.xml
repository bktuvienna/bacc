<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="eclipsercp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="eclipsercp.Perspective"
            id="eclipsercp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
        <view
            name="ScatterplotView"
            class="eclipsercp.ScatterplotView"
            id="eclipsercp.scatterplotView">
      </view>
       <view
            name="ValuechartView"
            class="eclipsercp.ValuechartView"
            id="eclipsercp.valuechartView">
      </view>
      <view
            name="ValuetableView"
            class="eclipsercp.ValuetableView"
            id="eclipsercp.valuetableView">
      </view>
      <view
            name="ConsoleView"
            class="eclipsercp.ConsoleView"
            id="eclipsercp.consoleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
